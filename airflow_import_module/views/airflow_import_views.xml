<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id='airflow_import_view_form' model='ir.ui.view'>
        <field name="name">airflow.import.wizard.form</field>
        <field name="model">airflow.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Airflow Import">
                <sheet>
                    <group>
                        <field name="path" />
                    </group>
                    <group string="Partners/Products/Sale Orders">
                        <button style="margin: 1em;" name="import_partners" type="object" string="Import Partners" class="oe_highlight"/>
                        <button style="margin: 1em;" name="import_products" type="object" string="Import Product Templates" class="oe_highlight"/>
                        <button style="margin: 1em;" name="import_sale_orders" type="object" string="Import Sale Orders 1-12" class="oe_highlight" context="{'button_id': 'orders01-12.csv'}"/>
                        <button style="margin: 1em;" name="import_sale_orders" type="object" string="Import Sale Orders 12-24" class="oe_highlight" context="{'button_id': 'orders12-24.csv'}"/>
                        <button style="margin: 1em;" name="import_sale_orders" type="object" string="Import Sale Orders 24-36" class="oe_highlight" context="{'button_id': 'orders24-36.csv'}"/>
                        <button style="margin: 1em;" name="import_sale_orders" type="object" string="Import Sale Orders 36-48" class="oe_highlight" context="{'button_id': 'orders36-48.csv'}"/>
                        <button style="margin: 1em;" name="import_sale_orders" type="object" string="Import Sale Orders 48-60" class="oe_highlight" context="{'button_id': 'orders48-60.csv'}"/>
                        <button style="margin: 1em;" name="import_sale_orders" type="object" string="Import Sale Orders 60-72" class="oe_highlight" context="{'button_id': 'orders60-72.csv'}"/>
                        <button style="margin: 1em;" name="import_sale_orders" type="object" string="Import Sale Orders 72-84" class="oe_highlight" context="{'button_id': 'orders72-84.csv'}"/>
                        <button style="margin: 1em;" name="import_sale_orders" type="object" string="Import Sale Orders 84-92" class="oe_highlight" context="{'button_id': 'orders84-92.csv'}"/>
                        <button style="margin: 1em;" name="fix_sale_order_partner_id" type="object" string="Fix Sale Order Partners 1" class="oe_highlight" context="{'button_id': 'webstore_orders_new.csv'}"/>
                        <button style="margin: 1em;" name="fix_sale_order_partner_id" type="object" string="Fix Sale Order Partners 2" class="oe_highlight" context="{'button_id': 'webstore_orders_new_2.csv'}"/>
                        <button style="margin: 1em;" name="fix_so_web_order_nr" type="object" string="Fix SO Web Order Nr" class="oe_highlight"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="airflow_import_tree_view" model="ir.ui.view">
        <field name="name">airflow.import.wizard.tree</field>
        <field name="model">airflow.import.wizard</field>
        <field name="arch" type="xml">
            <tree string="Airflow Import">
                <field name="path" />
            </tree>
        </field>
    </record>

    <record id="airflow_import_search_form_view" model="ir.ui.view">
        <field name="name">airflow.import.wizard.search</field>
        <field name="model">airflow.import.wizard</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search string="Airflow Import">
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_airflow_import">
        <field name="name">Airflow Import</field>
        <field name="res_model">airflow.import.wizard</field>
        <field name="search_view_id" ref="airflow_import_search_form_view"/>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_airflow_import" name="Airflow Import" parent="base.menu_administration" sequence="10"/>
    <menuitem id="menu_airflow_import_view" action="action_airflow_import" parent="menu_airflow_import"/>

</odoo>