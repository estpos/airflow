<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

<record id="product_bundle_form" model="ir.ui.view">
	<field name="name">product.bundle.form</field>
	<field name="model">product.bundle</field>
	<field name="arch" type="xml">
		<form string="Product Bundle" >
			<group col="4">
				<field name="product_id" context="{'default_is_pack': True}" domain="[('is_pack', '=', True)]"/>
				<field name="product_qty" />
                <field name="product_price" />
			</group>
			<group>
				<field name="pack_ids" attrs="{'invisible':[ ('product_id', '=' ,False)]}">
					<form string="Bundle Product">
						<group>
							<field name="product_id" />
							<field name="uom_id" />
							<field name="qty_uom" />
							<field name="image" />
						</group>
					</form>

					<tree>
						<field name="product_id" />
						<field name="qty_uom" />
						<field name="uom_id" />
					</tree>
				</field>
			</group>
			<footer>
				<button name="add_product_bundle_button" string="Add Bundle Products"
					type="object" class="oe_highlight" />
				<button string="Cancel" class="oe_link" special="cancel" />
			</footer>
		</form>
	</field>
</record>

<record id="product_bundle_action" model="ir.actions.act_window">
	<field name="name">Dynamic Product Bundle</field>
	<field name="res_model">product.bundle</field>
	<field name="view_type">form</field>
	<field name="view_mode">form</field>
	<field name="view_id" ref="product_bundle_form" />
	<field name="target">new</field>
</record>

</data>
</odoo>
